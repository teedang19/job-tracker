<h4>add a company</h4>

<% if flash[:errors] %>
  <% flash[:errors].each do |err| %>
    <p><%= err %></p>
  <% end %>
<% end %>

<%= form_for @company do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  
  <%= f.label :address %>
  <%= f.text_field :address %><br>
  
  <%= f.label :website %>
  <%= f.text_field :website %><br>
  
  <%= f.label :hiring %>
  <%= select_tag(:hiring, options_for_select([["Yes", 1], ["No", 2]])) %><br>

  <%= f.label :cto_name %>
  <%= f.text_field :cto_name %><br>

  <%= f.label :cto_email %>
  <%= f.text_field :cto_email %><br>

  <%= f.label :cto_twitter %>
  <%= f.text_field :cto_twitter %><br>

  <%= f.label :cto_blog_url %>
  <%= f.text_field :cto_blog_url %><br>

  <%= f.submit %>
<% end %>